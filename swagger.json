{
    "openapi": "3.0.0",
    "info": {
      "title": "PDF Generation API",
      "description": "API to generate PDFs from JSON data using Puppeteer",
      "version": "1.0.0"
    },
    
    "paths": {
      "/generatePDFFromJson": {
        "post": {
          "summary": "Generate a PDF from JSON data",
          "description": "Accepts a JSON payload and returns a generated PDF file.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "savedJson": {
                      "type": "object",
                      "description": "JSON data to be converted into a PDF",
                      "example": { "name": "Alice", "age": 25, "city": "Toronto" }
                    }
                  },
                  "required": ["savedJson"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "PDF generated successfully",
              "content": {
                "application/pdf": {
                  "schema": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            },
            "400": {
              "description": "Invalid JSON format",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "example": "Invalid JSON format. Must be a valid object."
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Internal Server Error",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "example": "Internal Server Error: Failed to generate PDF"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  